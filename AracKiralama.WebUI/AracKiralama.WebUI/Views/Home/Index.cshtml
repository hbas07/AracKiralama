@model IEnumerable<AracKiralama.WebUI.CarWebService.Car>
    @{
        ViewBag.Title = "Index";
    }

    @if (Model.Count() == 0)
    {
    <div class="alert alert-danger" role="alert">
        Kiralanacak araç bulunmamaktadır...
    </div>
    }
    else
    {
    <div class="col">
        <table class="table table-bordered" id="dataTable">
            <thead>
                <tr>
                    <th scope="col">Araba Adı</th>
                    <th scope="col">Model</th>
                    <th scope="col">Airbag</th>
                    <th scope="col">Bagaj Kapasitesi</th>
                    <th scope="col">Günlük Ücret</th>
                    <th scope="col" width="150px"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ToList())
                {
                <tr>
                    <td>@item.CarName</td>
                    <td>@item.CarModel</td>
                    <td>
                        @if (item.Airbag == true)
                        {
                            <b>Var</b>
                        }
                        else
                        {
                            <b>Yok</b>
                        }
                    </td>
                    <td>@item.BaggageCapacity</td>
                    <td>@item.DailyPrice</td>
                    <td style="max-width:20px">@Html.ActionLink("İstek Gönder", "CarRequest", "Home", item, new { @class = "btn btn-primary"})</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
    }